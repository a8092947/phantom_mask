    "paths": {
        "/api/pharmacies": {
            "get": {
                "tags": [
                    "藥局"
                ],
                "summary": "取得藥局列表，支援搜尋、過濾和排序",
                "operationId": "5888c7633db75f5dd2995d7866ba44ab",
                "parameters": [
                    {
                        "name": "day",
                        "in": "query",
                        "description": "星期幾 (Monday/Tuesday/Wednesday/Thursday/Friday/Saturday/Sunday)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "Monday",
                                "Tuesday",
                                "Wednesday",
                                "Thursday",
                                "Friday",
                                "Saturday",
                                "Sunday"
                            ]
                        }
                    },
                    {
                        "name": "time",
                        "in": "query",
                        "description": "營業時間篩選 (HH:mm 格式，例如：09:00)。會篩選出在指定時間點正在營業的藥局，即藥局的營業時間範圍包含此時間點",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "time",
                            "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "搜尋關鍵字（藥局名稱或口罩名稱），結果會按相關性排序：1. 完全匹配 2. 部分匹配 3. 口罩名稱匹配",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    {
                        "name": "min_price",
                        "in": "query",
                        "description": "最低價格",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "minimum": 0
                        }
                    },
                    {
                        "name": "max_price",
                        "in": "query",
                        "description": "最高價格",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "minimum": 0
                        }
                    },
                    {
                        "name": "mask_count",
                        "in": "query",
                        "description": "口罩產品種類數量（大於等於此數量的藥局）",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功取得藥局列表",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "DFW Wellness"
                                                    },
                                                    "cash_balance": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 328.41
                                                    },
                                                    "opening_hours": {
                                                        "type": "array",
                                                        "items": {
                                                            "properties": {
                                                                "day": {
                                                                    "type": "string",
                                                                    "example": "Monday"
                                                                },
                                                                "open": {
                                                                    "type": "string",
                                                                    "example": "08:00"
                                                                },
                                                                "close": {
                                                                    "type": "string",
                                                                    "example": "17:00"
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "masks": {
                                                        "type": "array",
                                                        "items": {
                                                            "properties": {
                                                                "id": {
                                                                    "type": "integer",
                                                                    "example": 1
                                                                },
                                                                "name": {
                                                                    "type": "string",
                                                                    "example": "Black Mask"
                                                                },
                                                                "price": {
                                                                    "type": "number",
                                                                    "format": "float",
                                                                    "example": 10
                                                                },
                                                                "stock": {
                                                                    "description": "庫存數量",
                                                                    "type": "integer",
                                                                    "example": 100
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "驗證失敗"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "伺服器錯誤",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "查詢藥局失敗"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/pharmacies/{id}": {
            "get": {
                "tags": [
                    "藥局"
                ],
                "summary": "取得藥局詳細資訊",
                "operationId": "7f2aa24ec703ebbddbd5fb570aa918f5",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "藥局 ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "排序欄位，可多選，用逗號分隔。支援的欄位：name（口罩名稱）, price（價格）, stock（庫存）。例如：name,price",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "pattern": "^(name|price|stock)(,(name|price|stock))*$"
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "排序方向，可多選，用逗號分隔。支援的值：asc（升序）, desc（降序）。例如：asc,desc。如果提供的排序方向數量少於排序欄位數量，將使用最後一個排序方向",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "pattern": "^(asc|desc)(,(asc|desc))*$"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功取得藥局詳細資訊",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "DFW Wellness"
                                                },
                                                "cash_balance": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 328.41
                                                },
                                                "opening_hours": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "day": {
                                                                "type": "string",
                                                                "example": "Monday"
                                                            },
                                                            "open": {
                                                                "type": "string",
                                                                "example": "08:00"
                                                            },
                                                            "close": {
                                                                "type": "string",
                                                                "example": "17:00"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "masks": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "Black Mask"
                                                            },
                                                            "price": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 10
                                                            },
                                                            "stock": {
                                                                "type": "integer",
                                                                "example": 100
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "藥局不存在",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "藥局不存在"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證錯誤",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "驗證失敗"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "伺服器錯誤",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "取得藥局詳細資訊失敗"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/top-users": {
            "get": {
                "tags": [
                    "交易"
                ],
                "summary": "取得交易排名前 N 名的使用者",
                "description": "根據不同的統計方式（總金額、交易次數、平均金額、口罩數量、最後交易時間）取得排名前 N 名的使用者",
                "operationId": "947ff33d1e0d7ae6b41750b414a51c7e",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "要返回的使用者數量",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10,
                            "maximum": 100,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "start_date",
                        "in": "query",
                        "description": "開始日期 (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "end_date",
                        "in": "query",
                        "description": "結束日期 (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "description": "排序依據",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "amount",
                            "enum": [
                                "amount",
                                "transaction_count",
                                "avg_amount",
                                "mask_count",
                                "last_transaction"
                            ]
                        }
                    },
                    {
                        "name": "order_by",
                        "in": "query",
                        "description": "排序方式",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "desc",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功取得使用者排名",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "John Doe"
                                                    },
                                                    "cash_balance": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 1000.5
                                                    },
                                                    "total_amount": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 500.75
                                                    },
                                                    "transaction_count": {
                                                        "type": "integer",
                                                        "example": 5
                                                    },
                                                    "avg_amount": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 100.15
                                                    },
                                                    "mask_count": {
                                                        "type": "integer",
                                                        "example": 20
                                                    },
                                                    "last_transaction": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2024-03-15 10:30:00"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "驗證失敗"
                                        },
                                        "errors": {
                                            "properties": {
                                                "limit": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "start_date": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "end_date": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "sort_by": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "order_by": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
