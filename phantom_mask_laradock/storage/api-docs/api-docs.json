        "/api/transactions": {
            "post": {
                "tags": [
                    "交易"
                ],
                "summary": "建立交易",
                "operationId": "54eaa3952808f639d46f969f4c8b98c5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id",
                                    "pharmacy_id",
                                    "mask_id",
                                    "quantity"
